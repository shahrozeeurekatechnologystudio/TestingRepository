<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rl_bottom_view"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:clickable="true"
    android:elevation="@dimen/d_7"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/d_5"
    app:cardBackgroundColor="@color/color_white_grash"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/d_7"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_gravity="bottom"
   >

    <WebView
        android:id="@+id/webView_banner_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/d_4"
        android:scrollbarThumbHorizontal="@drawable/scrollbar"
        android:layout_gravity="top"
        />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/d_25"
        android:layout_height="@dimen/d_25"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/d_5"
        android:src="@mipmap/popup_close"
        />

</RelativeLayout>
</android.support.v7.widget.CardView>
