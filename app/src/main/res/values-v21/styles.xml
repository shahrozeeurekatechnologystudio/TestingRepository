<resources>

    <!-- Base application theme. -->
    <style name="engagement_translateDialogAnimation_slow_top">
        <item name="android:windowEnterAnimation">@anim/egagement_anim_translate_in_slow</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowExitAnimation">@anim/egagement_anim_translate_out_slow</item>
    </style>
    <style name="engagement_dialog_style_animation_push">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="engagement_translateDialogAnimation_slow_bottom">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/egagement_anim_translate_in_slow_bottom</item>
        <item name="android:windowExitAnimation">@anim/egagement_anim_translate_out_slow_bottom</item>
    </style>
    <style name="CustomTextAppearance">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="EditTextAppearance" parent="Widget.AppCompat.EditText">

        <item name="android:textAppearance">@style/CustomTextAppearance</item>
    </style>
    <style name="engagement_dialog_style_animation_middle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>
    <style name="engagement_dialog_style_animation_full_screen">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="engagement_dialog_style_animation_banner">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="engagement_dialog_style_animation_bottom">
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
    <style name="engagement_dialog_style_animation_top">
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
    <style name="engagement_PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/egagement_animate_in_top</item>
        <item name="android:windowExitAnimation">@anim/egagement_animate_out_top</item>
    </style>
</resources>
